    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalSpecies)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalBreed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalEstimatedWeight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnimalDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
